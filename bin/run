// -*-js2-*-

var Q = require('q');
var capp = require('../core');
var argv = require('yargs')
      .options({
        'c': {
          desc: "continuous build",
          type: 'boolean'
        }
      })
      .argv;

Q().then(function () {
  return capp.build_client({cts: argv.c});
}).then(function () {
  return capp.run_server();
});
